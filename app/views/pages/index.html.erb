<table>
  <% @pages.each do |page| %>
    <tr>
      <td><b><%= link_to page, slug_path(page.slug) %></b> &nbsp; &nbsp; </td>
      <td>
        <%= link_to 'edit', edit_page_path(page) %> &nbsp; 
        <%= link_to 'delete', page, :confirm => 'Are you sure?', :method => :delete %>
      </td>
    </tr>
  <% end %>
</table>

<p><%= link_to 'New page &raquo;', new_page_path %></p>
<p><%= link_to 'Files &raquo;', files_path %></p>
<p><%= link_to 'Settings &raquo;', settings_path %></p>
