<h1>static</h1>

<ul>
  <% @pages.each do |page| %>
    <li>
      <%= link_to page, slug_path(page.slug) %>
      <%= link_to '(edit)', edit_page_path(page) %>
      <%= link_to '(delete)', page, :confirm => 'Are you sure?', :method => :delete %>
    </li>
  <% end %>
</ul>

<p><%= link_to 'New page', new_page_path %></p>